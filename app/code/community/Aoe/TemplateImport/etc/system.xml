<?xml version="1.0"?>
<!--
/**
* Template import
*
* @author Manish Jain
*/
-->
<config>
    <sections>
        <design>
            <groups>
                <aoe_templateimport>
                    <label>AOE Template Import</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled Template Import</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <template_paths translate="label">
                            <label>Template Configuration</label>
                            <frontend_type>textarea</frontend_type>
                            <comment><![CDATA[Newline separated list of template paths. Format: [regex pattern for full action name];[template path];[base path];[cache lifetime in secs]. Ex: checkout_cart_index;/var/www/project/cart.html;;60]]></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </template_paths>
                        <http_username translate="label">
                            <label>HTTP Authentication Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </http_username>
                        <http_password translate="label">
                            <label>HTTP Authentication Password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </http_password>
                    </fields>
                </aoe_templateimport>
            </groups>
        </design>
    </sections>
</config>
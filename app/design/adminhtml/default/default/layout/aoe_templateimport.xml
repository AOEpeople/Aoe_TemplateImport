<layout>
    <adminhtml_templateimport_template_index>
        <reference name="menu">
            <action method="setActive">
                <menupath>system/aoe_templateimport/template</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="aoe_templateimport/adminhtml_template" name="template" />

        </reference>
    </adminhtml_templateimport_template_index>
    <adminhtml_templateimport_template_grid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="aoe_templateimport/adminhtml_template_grid" name="template_grid"/>
        </block>
    </adminhtml_templateimport_template_grid>
    <!-- Template add/edit action -->
    <adminhtml_templateimport_template_edit>
        <update handle="editor"/>
        <reference name="menu">
            <action method="setActive">
                <menupath>system/aoe_templateimport/template</menupath>
            </action>
        </reference>
        <reference name="content">
            <block type="aoe_templateimport/adminhtml_template_edit" name="template_edit"></block>
        </reference>
        <reference name="left">
            <block type="aoe_templateimport/adminhtml_template_edit_tabs" name="template_tabs"></block>
        </reference>
    </adminhtml_templateimport_template_edit>

</layout>
